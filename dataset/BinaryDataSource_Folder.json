			"referenceName": "storageLS",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"Directory": {
				"type": "String",
				"defaultValue": "sink"
			},
			"Container": {
				"type": "string",
				"defaultValue": "none"
			}
		},
		"annotations": [],
		"type": "Binary",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"folderPath": {
					"value": "@dataset().Directory",
					"type": "Expression"
				},
				"container": {
					"value": "@dataset().Container",
					"type": "Expression"
				}
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}